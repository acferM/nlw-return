generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name     String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Feedback {
  id String @id @default(uuid())

  type       String
  comment    String
  screenshot String?

  createdAt DateTime @default(now())

  @@map("feedbacks")
}
